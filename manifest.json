{
    "name": "periodBreak",
    "author": "coulank",
    "version": "1.3",
    "manifest_version": 3,
    "description": "選択された要素の句読点の次を改行します",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["content.js"]
    }],
    "permissions": [
        "contextMenus"
    ]
}